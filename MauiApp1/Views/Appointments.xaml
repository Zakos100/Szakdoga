<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MauiApp1"
             xmlns:services="clr-namespace:MauiApp1.Services"
             x:Class="MauiApp1.Appointments"
             Title="Appointments">

    <ContentPage.Resources>
        <ResourceDictionary>
            <services:OperationTimeToWidthConverter x:Key="OperationTimeToWidthConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="30">

            <Label Text="Ütemezési eredmények" FontSize="24" HorizontalOptions="Center" />

            <Grid ColumnDefinitions="*,10,*" HorizontalOptions="Center">

                <!-- EDD blokk -->
                <VerticalStackLayout Grid.Column="0" WidthRequest="400" Spacing="10" Padding="10">
                    <Label Text="EDD sorrend" FontAttributes="Bold" FontSize="18" HorizontalOptions="Center" />
                    <CollectionView ItemsSource="{Binding ScheduleResults}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <VerticalStackLayout>
                                    <Label Text="{Binding UserName}" FontAttributes="Bold" FontSize="16" HorizontalOptions="Center" />
                                    <CollectionView ItemsSource="{Binding AssignedTasks}">
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate>
                                                <Label Text="{Binding .}" FontSize="16" />
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>
                                </VerticalStackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>

                <!-- Elválasztó -->
                <BoxView Grid.Column="1" WidthRequest="1" Color="Gray" VerticalOptions="Fill" />

                <!-- Flow Shop blokk -->
                <VerticalStackLayout Grid.Column="2" WidthRequest="400" Spacing="10" Padding="10">
                    <Label Text="Flow Shop sorrend" FontAttributes="Bold" FontSize="18" HorizontalOptions="Center" />
                    <CollectionView ItemsSource="{Binding FlowShopScheduleResults}" >
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <VerticalStackLayout>
                                    <Label Text="{Binding UserName}" FontAttributes="Bold" FontSize="16" HorizontalOptions="Center" />
                                    <CollectionView ItemsSource="{Binding AssignedTasks}">
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate>
                                                <Label Text="{Binding .}" FontSize="16" />
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>
                                </VerticalStackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>

            </Grid>

            <!-- Flow Shop Vizualizáció -->
            <VerticalStackLayout Spacing="10">
                <Label Text="Flow Shop vizualizáció" FontSize="18" HorizontalOptions="Center" />

                <CollectionView ItemsSource="{Binding FlowShopBarData}" HeightRequest="60">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Horizontal" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <BoxView HeightRequest="40"
                     WidthRequest="{Binding OperationTime, Converter={StaticResource OperationTimeToWidthConverter}}"
                     Color="CornflowerBlue"
                     Margin="5,0"/>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
